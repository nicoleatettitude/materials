{% comment %}Starting from 31 Jan 2024 this file is optional. File is still used for faster CSS load, but if it will be removed - Global-e will keep working.{% endcomment %}

{% assign tagsToCheck = "" | downcase | split: "," %}
{% assign checkout_customer_tags = checkout.customer.tags | downcase %}
{% assign found = false %}
{% for item in tagsToCheck %}
  {% if checkout_customer_tags contains item %}
    {% assign found = true %}
    {% break %}
  {% endif %}
{% endfor %}
{% if found %}
{% else %}
    {% if checkout.shipping_address.country_code != blank %}    
        {% assign shipping_country_code = checkout.shipping_address.country_code %}  
    {% else if checkout.billing_address.country_code != blank %}    
        {% assign shipping_country_code = checkout.billing_address.country_code %}  
    {% else %}    
        {% assign shipping_country_code =  localization.country.iso_code %}  
    {% endif %}  

    <link rel="stylesheet" type="text/css" href="https://crossborder-integration-qa-int.bglobale.com/resources/css/30000057/{{shipping_country_code}}"/>
    <link rel="stylesheet" type="text/css" href="https://www.bglobale.com/platforms/shopify/checkout/styles/30000057/{{shipping_country_code}}"/>
{% endif %}